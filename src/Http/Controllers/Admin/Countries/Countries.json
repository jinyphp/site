{
    "table": {
        "name": "site_countries",
        "model": "Jiny\\Site\\Models\\SiteCountry",
        "where": {},
        "sort": {
            "column": "order",
            "order": "asc"
        }
    },
    "index": {
        "title": "국가 관리",
        "subtitle": "사이트에서 제공 가능한 국가 목록",
        "view": "jiny-site::admin.countries.index",
        "route": "admin.cms.country.index",
        "filter": {
            "search": true,
            "enable": true,
            "is_default": true
        },
        "pagination": {
            "per_page": 15
        }
    },
    "show": {
        "title": "국가 상세",
        "subtitle": "국가 정보 조회",
        "view": "jiny-site::admin.countries.show",
        "route": "admin.cms.country.show"
    },
    "create": {
        "title": "국가 생성",
        "subtitle": "새로운 국가 추가",
        "view": "jiny-site::admin.countries.create",
        "route": "admin.cms.country.create"
    },
    "edit": {
        "title": "국가 수정",
        "subtitle": "국가 정보 수정",
        "view": "jiny-site::admin.countries.edit",
        "route": "admin.cms.country.edit"
    },
    "store": {
        "route": "admin.cms.country.store",
        "redirect": {
            "success": "admin.cms.country.index",
            "error": "admin.cms.country.create"
        },
        "validation": {
            "code": "required|string|max:3|unique:site_countries",
            "name": "required|string|max:100",
            "native_name": "nullable|string|max:100",
            "description": "nullable|string",
            "capital": "nullable|string|max:100",
            "currency": "nullable|string|max:10",
            "phone_code": "nullable|string|max:10",
            "enable": "required|boolean",
            "is_default": "nullable|boolean",
            "order": "nullable|integer|min:0",
            "flag": "nullable|string|max:10",
            "region": "nullable|string|max:50"
        },
        "defaults": {
            "enable": true,
            "is_default": false,
            "order": 0
        },
        "messages": {
            "success": "국가가 성공적으로 생성되었습니다.",
            "error": "국가 생성에 실패했습니다."
        }
    },
    "update": {
        "route": "admin.cms.country.update",
        "redirect": {
            "success": "admin.cms.country.show",
            "error": "admin.cms.country.edit"
        },
        "validation": {
            "code": "required|string|max:3",
            "name": "required|string|max:100",
            "native_name": "nullable|string|max:100",
            "description": "nullable|string",
            "capital": "nullable|string|max:100",
            "currency": "nullable|string|max:10",
            "phone_code": "nullable|string|max:10",
            "enable": "required|boolean",
            "is_default": "nullable|boolean",
            "order": "nullable|integer|min:0",
            "flag": "nullable|string|max:10",
            "region": "nullable|string|max:50"
        },
        "messages": {
            "success": "국가가 성공적으로 업데이트되었습니다.",
            "error": "국가 업데이트에 실패했습니다."
        }
    },
    "delete": {
        "title": "국가 삭제",
        "subtitle": "국가 삭제 확인",
        "route": "admin.cms.country.destroy",
        "redirect": {
            "success": "admin.cms.country.index"
        },
        "validation": {
            "check_default": true
        },
        "messages": {
            "success": "국가가 성공적으로 삭제되었습니다.",
            "error": "국가 삭제에 실패했습니다.",
            "is_default": "기본 국가는 삭제할 수 없습니다."
        }
    },
    "actions": {
        "toggle": {
            "route": "admin.cms.country.toggle",
            "messages": {
                "success": "국가 상태가 변경되었습니다.",
                "error": "국가 상태 변경에 실패했습니다."
            }
        },
        "set_default": {
            "route": "admin.cms.country.set-default",
            "messages": {
                "success": "기본 국가가 설정되었습니다.",
                "error": "기본 국가 설정에 실패했습니다."
            }
        },
        "bulk": {
            "route": "admin.cms.country.bulk-action",
            "actions": ["enable", "disable", "delete"],
            "messages": {
                "success": "일괄 작업이 완료되었습니다.",
                "error": "일괄 작업에 실패했습니다."
            }
        }
    }
}